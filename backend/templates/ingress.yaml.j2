apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ ingress_name }}
  namespace: {{ namespace }}
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - host: {{ host }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{ wordpress_service_name }}
            port:
              number: {{ wordpress_port }}